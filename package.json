{
  "name": "blog-api",
  "version": "1.0.0",
  "description": "A feature-rich RESTful API for a modern blogging platform with authentication, content management, and engagement features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "echo 'Type checking not configured for JavaScript'",
    "build:check": "node -c app.js && node -c server.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "ci": "npm run lint && npm run format:check && npm run test:ci && npm run security:audit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dazeez1/blog-api.git"
  },
  "keywords": [
    "blog",
    "api",
    "express",
    "mongodb",
    "jwt",
    "authentication"
  ],
  "author": "Azeez Damilare Gbenga",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dazeez1/blog-api/issues"
  },
  "homepage": "https://github.com/dazeez1/blog-api#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
